@model List<Food>

<div >
<table id="try" class="table table-bordered table-sm"  width="50%">
    <tr>
        <th>
             Name
        </th>
        <th>
            Price
        </th>
        <th>
            Image
        </th>
        <th>
            Description
        </th>
         <th>
            Category
        </th>
         
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td><img src="~/images/@item.Image" style="width:200px;height:200px" /></td>
           <td>@item.Description</td>
            <td>@item.Category.Name</td>    
            <td><a class="btn btn-warning " asp-controller="Menu" asp-route-id="@item.Id" asp-action="EditFood">Edit</a></td>
            <td><a class="btn btn-danger del" asp-controller="Menu" asp-route-id="@item.Id" asp-action="DeleteFood">Delete</a></td>


        </tr>
    }
</table>
</div>
             <a class="btn btn-success" href="/Menu/AddFood">Add Item</a>
             <script>
                 var deletebtn=document.getElementsByClassName("del");
                 for(var i=0;i<deletebtn.length;i++)
                 {
                       deletebtn[i].addEventListener("click",function(e){
                           var res =confirm("Do you want to delete this Item?")
                           if(res==false){
                               e.preventDefault();
                           }
                       });
                 }

             </script>



