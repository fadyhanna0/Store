@model Product
<div class="heading_container heading_center">
        </div>
        <div style="margin-top:110px"></div>
<form class="container" method="post" action="\menu\AddProduct">
    <div>
        <label for="Name">Name</label>
        <input type="text" name="Name" id="Name"value=@Model.Name  class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>

   </div>
        <div>
        <label for="Image">Image</label>
        <input type="file" name="Image" id="Image"value=@Model.Image  class="form-control" />
                <span class="text-danger" asp-validation-for="Image"></span>

  </div>
  <div>
        <label for="Price">Price</label>
        <input type="text" name="Price" id="Price"value=@Model.Price  placeholder="enter Price"  class="form-control" />
         <span class="text-danger" asp-validation-for="Price"></span>

    </div>
  <div>
        <label for="Description">Description</label>
        <input type="text" name="Description" id="Description"value=@Model.Description placeholder="enter Description"  class="form-control" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
   <div>
       
        <label for="Category_Id">categories</label>
        <select name="Category_Id" id="Category_Id" class="form-control">
           @foreach (var categoriesItem in ViewBag.categories)
            {
               
                    <option value="@categoriesItem.Id" >@categoriesItem.Name</option>
                
           }
        </select>
        </div>
  

    <input style="margin:10px 0px 10px 0px;width:100px" type="submit" class="btn btn-success" value="Save" />

  </form>

