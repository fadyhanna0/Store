 @model List<Product>
<section class="food_section layout_padding-bottom">
      <div class="container">
        <div class="heading_container heading_center">
        </div>
        <div style="margin-top:150px"></div>

<div class="container">
        <div class="row">
@foreach (var item in Model)
{
    
  <div class="col-md-6 col-sm-12 col-lg-4">
     
  <div class="card" style="width: 20rem;margin-right:40px !important;margin-bottom:40px ; border-radius:20px 20px 0px 0px">
       <a style="padding:0px" href="\CustomerMenu\ProductDetails\@item.Id"><img class="card-img-top" src="/images/@item.Image" alt="Card image cap" style="border-radius:20px 20px 0px 0px;width:100%;height:33vh"> </a>
  <div class="card-body" style="background-color:rgb(34, 40, 49);border-radius:0px 0px 20px 20px">
    <h5 class="card-title" style="color:white">@item.Name</h5>
    <p class="card-text" style="color:white;height:20px" >@item.Description</p>
    <h3 class="card-text" style="color:white;display:inline-block" > <span class="a-price-symbol">EGP  </span>@String.Format("{0:0.00}", item.Price)</h3>
       <form method="post" action="\CustomerMenu\AddInBasket\@item.Category_Id">
           <input type="hidden" name="ProductId" value=@item.Id>
            <input type="submit" value="Add to Cart" class="btn btn-primary"/>
           <i class="fa fa-minus-circle text-warning mx-2" style="cursor: pointer; font-size: 2em;"onClick='decreaseCount(event, this)'></i>
          <input  name="quantity" style=" border-radius:5px; width: 50px; border: 0;line-height: 30px;font-size: 20px;text-align: center;background-color:#007bff;color: white;appearance: none;outline: 0;" type="text" value="1">
          <i class="fa fa-plus-circle text-warning mx-2" style="cursor: pointer; font-size: 2em;"onClick='increaseCount(event, this)'></i>
       

      </form>
  </div>
   </div>
   
</div> 

}
</div>

  </div>
 
        </div>
    </section>

    <!-- end food section -->

    <script>
    function increaseCount(a, b) {
  var input = b.previousElementSibling;
  var value = parseInt(input.value, 10);
  value = isNaN(value) ? 0 : value;
  value++;
  input.value = value;
}

function decreaseCount(a, b) {
  var input = b.nextElementSibling;
  var value = parseInt(input.value, 10);
  if (value > 1) {
    value = isNaN(value) ? 0 : value;
    value--;
    input.value = value;
  }
}
</script>