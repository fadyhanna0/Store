@model Product
<div class="container py-5">
  <div class="row">
    <div class="col-md-6 col-sm-3" style="margin-top:100px; margin-bottom:50px;">
      <img src="~/images/@Model.Image" alt="" class="w-100 mb-5" />
    </div>

    <div class="col-md-6 col-sm-3" style="margin-top:100px">
      <h3>@Model.Name</h3>
      <h2 style="font-family:'Times New Roman', Times, serif"  class="font-bold ">EGP @String.Format("{0:0.00}",@Model.Price) </h2>
  
      <div class="d-flex justify-conent-start align-items-center">
           <form method="post" action="\CustomerMenu\AddInBasket\0">
          <i class="fa fa-minus-circle text-warning mx-2" style="cursor: pointer; font-size: 2em;"onClick='decreaseCount(event, this)'></i>
          <input name="quantity" style=" width: 50px; border: 0;line-height: 30px;font-size: 20px;text-align: center;color: black;appearance: none;outline: 0;" type="text" value="1">
          <i class="fa fa-plus-circle text-warning mx-2" style="cursor: pointer; font-size: 2em;"onClick='increaseCount(event, this)'></i>
               <input type="hidden" name="ProductId" value="@Model.Id" >
  <input type="submit" name="ProductId" value="Add to Cart" class="btn btn-outline-secondary btn-lg ml-4">
  </form>
      </div>
  
      <div class="row mt-5">
          <div class="col-12 ml-3">
              <h4>Description</h4>
              <p>@Model.Description </p>
          </div>
      </div>
    </div>
  </div>
</div>

<script>
    function increaseCount(a, b) {
  var input = b.previousElementSibling;
  var value = parseInt(input.value, 10);
  value = isNaN(value) ? 0 : value;
  value++;
  input.value = value;
}

function decreaseCount(a, b) {
  var input = b.nextElementSibling;
  var value = parseInt(input.value, 10);
  if (value > 1) {
    value = isNaN(value) ? 0 : value;
    value--;
    input.value = value;
  }
}
</script>