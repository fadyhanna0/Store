@model Food
<form method="post" action="\menu\EditFood">
    <div>
        
        <input type="hidden" name="Id" id="Id"value=@Model.Id  class="form-control" />
        <label for="Name">Name</label>
        <input type="text" name="Name" id="Name"value=@Model.Name  class="form-control" />
   </div>
        <div>
        <label for="Image">Image</label>
        <input type="text" name="Image" id="Image"value=@Model.Image  class="form-control" />
  </div>
  <div>
        <label for="Price">Price</label>
        <input type="text" name="Price" id="Price"value=@Model.Price placeholder="enter Price"  class="form-control" />
  </div>
  <div>
        <label for="Description">Description</label>
        <input type="text" name="Description" id="Description"value=@Model.Description placeholder="enter Description"  class="form-control" />
 </div>
   <div>
       
        <label for="Category_Id">categories</label>
        <select name="Category_Id" id="Category_Id" class="form-control">
           @foreach (var categoriesItem in ViewBag.categories)
            {
                if (categoriesItem.Id == Model.Category_Id)
                {
                    <option value="@categoriesItem.Id" selected >@categoriesItem.Name</option>
               }else{
                    <option value="@categoriesItem.Id" >@categoriesItem.Name</option>
           }}
        </select>
        </div>

    <input type="submit" class="btn btn-sucess" value="Save" />

  </form>
